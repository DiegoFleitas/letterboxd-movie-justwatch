{
  "name": "movie-justwatch",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "type": "module",
  "packageManager": "pnpm@10.10.0",
  "scripts": {
    "test": "node tests/filterLogic.test.js && node tests/stateTileManagement.test.js && node tests/posthog.test.js",
    "test:filter": "node tests/filterLogic.test.js",
    "test:state": "node tests/stateTileManagement.test.js",
    "test:posthog": "node tests/posthog.test.js",
    "test:browser": "echo 'Open http://localhost:5173/testBrowserState.html in your browser'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "fe:dev": "npx vite",
    "fe:serve": "npx vite preview",
    "devtools": "react-devtools",
    "be:dev": "npx nodemon server.js",
    "start": "node server.js",
    "build": "npx vite build",
    "dev": "concurrently \"pnpm:fe:dev\" \"pnpm:be:dev\" --kill-others",
    "app": "node -p \"require('./package.json').name\"",
    "fly:deploy": "pnpm run build && flyctl deploy",
    "fly:logs": "flyctl logs -a $(node -p \"require('./package.json').name\")",
    "fly:stop": "flyctl scale count 0 -a $(node -p \"require('./package.json').name\")",
    "fly:start": "flyctl scale count 1 -a $(node -p \"require('./package.json').name\")",
    "fly:ssh": "flyctl ssh console -a $(node -p \"require('./package.json').name\")"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fly-examples/movie-justwatch.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/fly-examples/movie-justwatch/issues"
  },
  "homepage": "https://github.com/fly-examples/movie-justwatch#readme",
  "pnpm": {
    "overrides": {
      "cross-spawn": ">=6.0.6",
      "lodash": ">=4.17.23",
      "got": ">=11.8.5",
      "on-headers": ">=1.1.0",
      "diff": ">=8.0.3",
      "esbuild": ">=0.25.0",
      "electron": ">=35.7.5"
    }
  },
  "dependencies": {
    "@posthog/react": "^1.8.0",
    "axios": "^1.7.4",
    "body-parser": "^1.20.3",
    "cheerio": "^1.0.0-rc.12",
    "cookie-session": "^2.0.0",
    "diegos-fly-logger": "^1.0.1",
    "dotenv": "^16.0.3",
    "express": "^4.21.0",
    "morgan": "^1.10.0",
    "posthog-js": "^1.351.4",
    "posthog-node": "5.21.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-hot-toast": "^2.6.0",
    "redis": "^4.6.4",
    "ua-parser-js": "^1.0.34",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.7.10",
    "@playwright/test": "^1.58.2",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/ui": "^4.0.18",
    "concurrently": "^8.0.1",
    "jsdom": "^27.4.0",
    "react-devtools": "^5.2.0",
    "vite": "^5.4.21",
    "vitest": "^4.0.18"
  }
}
