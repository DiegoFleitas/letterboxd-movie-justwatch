{
  "name": "movie-justwatch",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "type": "module",
  "packageManager": "pnpm@10.10.0",
  "scripts": {
    "test": "node tests/filterLogic.test.js && node tests/stateTileManagement.test.js",
    "test:filter": "node tests/filterLogic.test.js",
    "test:state": "node tests/stateTileManagement.test.js",
    "test:browser": "echo 'Open http://localhost:5173/testBrowserState.html in your browser'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "fe:dev": "npx vite",
    "fe:serve": "npx vite preview",
    "devtools": "react-devtools",
    "be:dev": "npx nodemon server.js",
    "start": "node server.js",
    "build": "npx vite build",
    "dev": "concurrently \"pnpm:fe:dev\" \"pnpm:be:dev\" --kill-others",
    "app": "npx cross-var echo $npm_package_name",
    "fly:deploy": "pnpm run build && flyctl deploy",
    "fly:logs": "npx cross-var flyctl logs -a $npm_package_name",
    "fly:stop": "npx cross-var flyctl scale count 0 -a $npm_package_name",
    "fly:start": "npx cross-var flyctl scale count 1 -a $npm_package_name",
    "fly:ssh": "npx cross-var flyctl ssh console -a $npm_package_name"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fly-examples/movie-justwatch.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/fly-examples/movie-justwatch/issues"
  },
  "homepage": "https://github.com/fly-examples/movie-justwatch#readme",
  "dependencies": {
    "axios": "^1.3.2",
    "body-parser": "^1.20.1",
    "cheerio": "^1.0.0-rc.12",
    "cookie-session": "^2.0.0",
    "diegos-fly-logger": "^1.0.1",
    "dotenv": "^16.0.3",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-hot-toast": "^2.6.0",
    "redis": "^4.6.4",
    "ua-parser-js": "^1.0.34",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "react-devtools": "^5.2.0",
    "@flydotio/dockerfile": "^0.7.10",
    "@playwright/test": "^1.58.2",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/ui": "^4.0.18",
    "concurrently": "^8.0.1",
    "cross-var": "^1.1.0",
    "jsdom": "^27.4.0",
    "vite": "^4.2.1",
    "vitest": "^4.0.18"
  }
}
